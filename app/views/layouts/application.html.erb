<!DOCTYPE html>
<html>
<head>
  <title>Heroik</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Roboto:400,700,900,500,300,400italic', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Handlee|Raleway' rel='stylesheet' type='text/css'>
</head>
<body>
<%= render 'partials/navbar' %>
<%= yield %>

<!-- Modal for SINGLE POST on PROFILE PAGE-->
<div class="modal fade single-modal" id="showsinglepost" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header single-header">
        <div class="switch">
          <div id="vote-form-message"></div>
          <button type="button" class="btn btn-danger heroBtn col-xs-4">Vote for my hero!</button>
          <button type="button" class="btn btn-danger thank-you-btn col-xs-4">Your hero thanks you!</button>
        </div>
        <div class="col-xs-8">
          <button type="button" class="btn btn-info editPostBtn"><i class="fa fa-pencil-square-o"></i> Edit</button>
          <button type="button" class="btn btn-info deletePostBtn"><i class="fa fa-trash-o"></i> Delete</button>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
      </div>
      <div class="modal-body single-body"></div>
      <div id ="commentsection">
        <div class="col-xs-12" id="see-more"><button type="button" class="btn btn-default" id="view-all-comments">View all comments...</button></div>
        <div class="col-xs-12" id="allcomments"></div>
        <textarea class="form-control" id="commentform" name="comment" rows="1" placeholder="Add a comment..."></textarea>
        <button type="button" class="btn btn-info comment-btn"><i class="fa fa-commenting-o"></i>  Comment</button>
        <div id="comment-form-message"></div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


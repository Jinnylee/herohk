<div class="container-fluid">
  <div class="col-md-3" id="usercolumn">
  </div>


  <div class="col-md-9" id="showuserposts">
    <div class="col-md-4" id="addpostdiv"><button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#addpostmodal"><i class="fa fa-plus"></i></button></div>
    <div class="row" id="userposts"></div>
  </div>
</div>

<!-- Modal for ADDING POST-->
<div class="modal fade ui-autocomplete" id="addpostmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add a post!</h4>
      </div>
      <div class="modal-body">

        <div id="createpost-profile">

            <form id="createpost">
              <p><input type="text" name="title" class="form-control" placeholder="Title"></p>
              <div>
                <label for="create-image">Upload Image:</label>
                <input type="file" name="image" id="create-image">
              </div>
              <p><select class="form-control" name="category">
                <option>Category</option>
                <option>Community</option>
                <option>Youth</option>
                <option>Environment</option>
                <option>Animals</option>
                <option>Good deeds</option>
              </select></p>
              <p><input type="text" name="location" class="form-control controls" placeholder="Location" id="district"></p>
              <div id="map" style="width:456px;height:400px"></div><br>
              <p><textarea class="form-control" name="description" rows="3"></textarea></p>
              <p><input type="submit" name="create" class="btn btn-info" value="Create Post!"></p>
            </form>

            <div id="create-form-message"></div>
          </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal for EDITING POST-->
<div class="modal fade" id="editpostmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myEditPost">Edit Profile</h4>
      </div>

      <div class="modal-body">

        <div id="editpost-profile">

            <form id="editpost">
              <div id="for-postimage"></div>
              <div>
                <label for="edit-post-image">Update Image:</label>
                <input type="file" name="postimage" id="edit-post-image">
              </div>
              <p>
                <label for="edit-title">Title</label>
                <input type="text" id="edit-title" class="form-control" placeholder="Title">
              </p>
              <p>
                <label for="edit-category">Category</label>
                <select class="form-control" id="edit-category">
                  <option>Category</option>
                  <option>Community</option>
                  <option>Youth</option>
                  <option>Environment</option>
                  <option>Animals</option>
                  <option>Good deeds</option>
                </select>
              </p>
              <p>
                <p><input type="text" name="location" class="form-control controls" placeholder="Location" id="district2"></p>
                <div id="map2" style="width:456px;height:200px"></div><br>
              </p>
              <p>
                <label for="edit-description">Description</label>
                <textarea class="form-control" id="edit-description" rows="3" placeholder="Description"></textarea>
              </p>
              <p><input type="submit" name="edit" class="btn btn-info" value="Save Changes"></p>
            </form>

            <div id="edit-form-message"></div>
          </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal for EDITING USER-->
<div class="modal fade" id="editusermodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="my EditProfile">Edit Profile</h4>
      </div>
      <div class="modal-body">

        <div id="edit-user-profile">

            <form id="edituser">
              <div id="for-image"></div>
              <div>
              <input type="file" name="image" id="edit-image"><br>
              </div>
              <p>
              <label for="edit-firstname">First Name</label>
              <input type="text" id="edit-firstname" class="form-control">
              </p>
              <p>
              <label for="edit-lastname">Last Name</label>
              <input type="text" id="edit-lastname" class="form-control">
              </p>
              <p>
              <label for="edit-quote">Favorite Quote</label>
              <input type="text" id="edit-quote" class="form-control">
              </p>
              <p><input type="submit" id="edit-user-data" class="btn btn-default" value="Update"></p>
            </form>
          </div>
      </div>
    </div>
  </div>
</div>

